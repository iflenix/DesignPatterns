<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".PatternsActivityFragment"
    android:id="@+id/patternsFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/decorator_button"
        android:text="Декоратор"
        android:layout_alignParentStart="true"
        android:onClick="onDecorButtonClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AIDL Test"
        android:id="@+id/button"
        android:layout_below="@+id/decorator_button"
        android:layout_alignParentStart="true"
        android:onClick="startServiceButtonClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Наблюдатель"
        android:id="@+id/observer_button"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:onClick="onObserverButtonClick"/>


</RelativeLayout>
